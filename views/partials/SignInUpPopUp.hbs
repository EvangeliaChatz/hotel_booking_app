<div
  class="modal fade"
  id="exampleModal-2"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg" id="modal-width2">
    <div class="modal-content" id="sign-form">
      <div
        class="modal-header d-flex justify-content-center align-items-center"
        id="header-booking-form"
      >
        <!-- BUTTON X CLOSE MODAL -->
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button></div>
      <div class="modal-body" id="body-booking-form">

        <!-- SIGN IN -->
        <section id="sign-in">
          <div class="container">
            <div class="row justify-content-center">
              <div id="Sign-in-form">
                <div class="form-title">
                  <div class="fw-bold mb-3 main-titles-30px">Sign in</div>
                  <!-- FORM 2 -->
                  <form
                    action="/signIn"
                    method="POST"
                    class="needs-validation"
                    novalidate
                  >

                    <!-- EMAIL -->
                    <div class="form-floating mb-4">
                      <input
                        type="email"
                        class="form-control form-control-sm"
                        placeholder="Email"
                        name="email"
                      />
                      <label for="email">Email*</label>
                    </div>

                    <!-- PASSWORD -->
                    <div class="form-floating mb-4">
                      <input
                        name="password"
                        type="password"
                        class="form-control form-control-sm"
                        placeholder="password"
                      />
                      <label for="password">Password*</label>
                    </div>

                    <div class="mt-3">
                      <button class="btn primary-button">SIGN IN</button>
                    </div>
                  </form>
                  <!-- FORM 2 -->
                  <div class="mt-3">Donâ€™t have account?
                    <span id="SignUp">Sign up</span></div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- SIGN IN END-->

        <!-- SIGN UP FORM--CREATE YOUR ACCOUNT -->
        <section id="sign-up">
          <div class="container">
            <div class="row justify-content-center">

              <div id="Sign-up-form" class="registration-form">
                <div class="form-title">
                  <div class="fw-bold mb-3 main-titles-30px">Create your account</div>
                  <!-- FORM 3 -->
                  <form method="post" action="/signUp">

                    <!-- FULL NAME -->
                    <div class="form-floating mb-4">
                      <input
                        name="full_name"
                        type="text"
                        class="form-control form-control-sm"
                        placeholder="Full name"
                      />
                      <label for="full_name">Full name*</label>
                    </div>
                    <!-- EMAIL -->
                    <div class="form-floating mb-4">
                      <input
                        name="email"
                        type="email"
                        class="form-control form-control-sm"
                        placeholder="Email"
                      />
                      <label for="email">Email*</label>
                    </div>

                    <!-- PHONE -->
                    <div class="form-floating mb-4">
                      <input
                        name="phone_number"
                        type="tel"
                        class="form-control form-control-sm"
                        placeholder="Phone Number"
                      />
                      <label for="phone_number">Phone Number</label>
                    </div>

                    <!-- PASSWORD -->
                    <div class="form-floating mb-4">
                      <input
                        name="password"
                        type="password"
                        class="form-control form-control-sm"
                        placeholder="password"
                      />
                      <label for="password">Password*</label>
                    </div>

                    <div class="mt-3">
                      <button class="btn primary-button">SIGN UP</button>
                    </div>
                  </form>
                  <!-- FORM 3 -->
                  <div class="mt-3">Already have account?
                    <span id="SignIn">Sign in</span></div>
                </div>
              </div>

            </div>
          </div>
        </section>
        <!--  SIGN UP FORM END -->
        <!-- modal body end -->
      </div>
    </div>
  </div>
</div>
